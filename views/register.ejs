<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/lib/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="/css/login.css" type="text/css" />
    <script src="/lib/jquery.min.js"></script>
    <script src="/lib/bootstrap.js"></script>
</head>

<body>
    <% include partials/navbar%>
    <div class="container mt-4">
        <h1>Register to get the best experience</h1>
        <form action="/register/user" id="form" method="POST" onsubmit="event.preventDefault(); validate();">
            <div class="form-container">
                <div class="form-group">
                    <div class="mb-2">Email id</div>
                    <input class="form-control" type="text" name="email" placeholder="Enter Email id">
                </div>
                <div class="form-group">
                    <div class="mb-2">Username</div>
                    <input class="form-control" type="text" name="username" placeholder="Enter user name">
                </div>
                <div class="form-group">
                    <div class="mt-2 mb-2">Password</div>
                    <input class="form-control" type="password" name="pass" id="pass" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <div class="mt-2 mb-2">Retype Password</div>
                    <input class="form-control" type="password" id = "passconf" placeholder="Retype password">
                </div>
                <div class="form-group mt-4">
                    <input class="btn btn-success" type="submit" value="Register">
                </div>
                <div class="text text-danger mt-2" id="err"></div>
            </div>
        </form>
    </div>
    <script>
        function validate(){
            var pass = document.getElementById("pass").value;
            var passconf = document.getElementById("passconf").value;
            if(pass != passconf)
                document.getElementById("err").innerHTML="Passwords don't match";
            else
                document.getElementById("form").submit();
        }
    </script>
</body>

</html>